<Page
    x:Class="Petsy.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Petsy"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Red">
    
    <ScrollViewer>
        <StackPanel Orientation="Vertical" Grid.Row="0" Grid.Column="0">
            <TextBox x:ConnectionId='1' 
            Name="main_page_pet_name"
            HorizontalAlignment="Stretch"                                             />
        <Button x:ConnectionId='2' Name="main_page_button_add" HorizontalAlignment="Stretch"                                   >Aanmaken</Button>
        <Button x:ConnectionId='3'                     >Check if exist</Button>
        <TextBox Name="PetNameTextbox"></TextBox>

           
            <ListView x:Name="history" ItemsSource="{Binding}" Grid.Row="1" Grid.Column="0">
                <ListView.Resources>
                    <DataTemplate x:Key="petsDataViewModel">
                        <StackPanel>
                            <Image Source="/Assets/mensergerjeniet.png"/>
                            <TextBlock x:Name="title" HorizontalAlignment="Left"  TextWrapping="Wrap" Text="{Binding p_Name, Mode=OneTime}" VerticalAlignment="Top" Style="{StaticResource TitleTextBlockStyle}" />
                            <TextBlock x:Name="content" HorizontalAlignment="Left"  TextWrapping="Wrap" Text="{Binding p_Age, Mode=OneTime}" VerticalAlignment="Top" Style="{StaticResource BodyTextBlockStyle}"  />
                        </StackPanel>
                    </DataTemplate>
                </ListView.Resources>
                <ListView.ItemTemplate>
                    <StaticResource ResourceKey="petsDataViewModel"/>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>

        
    </ScrollViewer>

    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton x:ConnectionId='4' Icon="Add" Label="Add item"                           />
        </CommandBar>
    </Page.BottomAppBar>


    
</Page>

